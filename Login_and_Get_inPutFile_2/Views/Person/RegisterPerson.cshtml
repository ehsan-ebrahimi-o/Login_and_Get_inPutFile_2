<h1>Register Page</h1>

<form method="post" enctype="multipart/form-data" class="form-groupl width auto">
    <div class="form-group">
    <label>Full Name : </label>
    <input  type="text" name="FullName" class="form-control"/>
    <label>Email : </label>
        <input type="email" name="Email" class="form-control" placeholder="jane.doe@example.com" />
    <label>Age : </label>
    <input type="text" name="Age" class="form-control"/>
    <label>City Burn : </label>
    <select name="CityBurn" class="form-control">
        <option>Mashhad</option>
        <option>Ghochan</option>
        <option>Chenaran</option>
        <option>Golbahar</option>
    </select>
    <label>About Your Self : </label>
    <textarea class="form-control" rows="3"></textarea>
    <label>Mobile : </label>
        <input type="text" name="Mobile" class="form-control" />
    <label>Password : </label>
        <input type="password" name="Password" class="form-control" placeholder="Password" />
    <label>Choice Your Image : </label>
    <input type="file" name="File" />  <img src="data:Image/png;Base64,@Model.ImageName" style="width:50px;height:50px;border-radius:5px;"/><br />

        <input type="submit" class="btn btn-primary border " />
    </div>
</form>

<br />
<br />
<hr />
<h1>Person Registred</h1>

<table class="table table-striped table-bordered">
    <thead>
        <td>Fullname</td>
        <td>Email</td>
        <td>Age</td>
        <td>City Burn</td>
        <td>About Self</td>
        <td>Mobile</td>
        <td>Password</td>
        <td>Image</td>
   </thead>
   <tbody>
       <tr>
           <td>@Model.FullName</td>
           <td>@Model.Email</td>
           <td>@Model.Age</td>
           <td>@Model.CityBurn</td>
           <td>@Model.Aboutself</td>
           <td>@Model.Mobile</td>
           <td>@Model.Password</td>
            <td><img class="img-circle" <img src="data:Image/png;Base64,@Model.ImageName" style="width:50px;height:50px;border-radius:5px;" /> /></td>
       </tr>
   </tbody>
</table>

