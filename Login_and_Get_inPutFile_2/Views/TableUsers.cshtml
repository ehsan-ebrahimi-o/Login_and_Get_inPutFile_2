@model IEnumerable<Login_and_Get_inPutFile_2.Models.PersonViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@ViewBag.Hustmodel = @Model.Select(m => m.Hust).ToString();
@ViewBag.Filename = @Model.Select(m => m.File.FileName).ToString();

<h1>Peaple Table</h1>

<table class="table table-striped table-bordered">
    <tr>
    <th>Fullname</th>
    <th>Email</th>
    <th>Age</th>
    <th>City Burn</th>
    <th>About Self</th>
    <th>Mobile</th>
    <th>Password</th>
    <th>Image</th>
    </tr>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Age</td>
            <td>@item.CityBurn</td>
            <td>@item.Aboutself</td>
            <td>@item.Mobile</td>
            <td>@item.Password</td>
            <td><img class="img-circle" src="data:Image/png;Base64,@item.ImageName" style="width:50px;height:50px;border-radius:5px;"  /></td>
            <td><img class="img-circle" src="@Model.Select(m => m.Hust).ToString() + /Images/  + @Model.Select(m => m.File.FileName).ToString())" style="width:50px;height:50px;border-radius:5px;" /></td>
        </tr>
        }
        
    </tbody>
    
</table>

<br />
<br />
<hr />
<a href="~/Views/Person/RegisterPerson" class="btn btn-primary btn-lg disabled" role="button">Registration</a>

