@{
}

<h1>Peaple Table</h1>

<table class="table table-striped table-bordered">
    <tr>
    <th>Fullname</th>
    <th>Email</th>
    <th>Age</th>
    <th>City Burn</th>
    <th>About Self</th>
    <th>Mobile</th>
    <th>Password</th>
    <th>Image</th>
    </tr>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.Age</td>
            <td>@item.CityBurn</td>
            <td>@item.Aboutself</td>
            <td>@item.Mobile</td>
            <td>@item.Password</td>
            <td><img class="img-circle" <img src="data:Image/png;Base64,@item.ImageName" style="width:50px;height:50px;border-radius:5px;" /> /></td>
        </tr>
        }
        
    </tbody>
</table>

